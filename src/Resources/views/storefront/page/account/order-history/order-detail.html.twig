{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail.html.twig' %}

{% set shipppingCountryCode = context.customer.defaultShippingAddress.country.iso %}

{% block page_account_order_item_detail_vat_label %}
    {% if shipppingCountryCode == 'US' %}
        {% if config('InoceanSalesTaxesUsa.config.TaxBreakdown') %}
            {% if loop.index == 1 %}<dt class="col-12 tax-details">{{ ('salseTaxUsa.checkout.summary.TaxDetail' )|trans }}</dt>{% endif %}
            {% if loop.index == 5 && calculatedTax.taxRate != 0 %}<dt class="col-12 tax-details">{{ ('salseTaxUsa.checkout.summary.shippingTaxDetail' )|trans }}</dt>{% endif %}
            <dt class="col-6 col-md-8 order-history-detail summary-tax">
                {% if calculatedTax.taxRate == 0 && loop.index == 5 %}
                    {{ ('salseTaxUsa.checkout.summary.taxName0' )|trans }}
                {% else %}
                    {{ ('salseTaxUsa.checkout.summary.taxName' ~ loop.index)|trans }} ({{ calculatedTax.taxRate }}%)
                {% endif %}
            </dt>
        {% else %}
            <dt class="col-6 col-md-8 order-history-detail summary-tax">
                {{ ('salseTaxUsa.checkout.summary.combinedRate' ~ loop.index)|trans }} ({{ calculatedTax.taxRate }}%)
            </dt>
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}