{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail.html.twig' %}

{% set defaultShipppingCountry = context.customer.defaultShippingAddress.country.name %}

{% block page_account_order_item_detail_vat_label %}
    {% if defaultShipppingCountry == 'Canada' %}
        {% set calculatedTaxRate = calculatedTax.taxRate ?? 0 %}
        <dt class="col-6 col-md-8">
            {% if calculatedTaxRate != 0 %}+ {{ calculatedTaxRate }}%{% endif %} {{ calculatedTaxRate | getTaxName(app.request.locale | slice(0, 2)) }}
        </dt>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}